<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <LinearLayout
        android:id="@+id/titleRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#FFFFFF"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="26dp"
        android:paddingBottom="16dp"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/car_icon"
            android:layout_marginEnd="12dp"
            android:contentDescription="App logo" />

        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="도우미카 음성 서비스"
            android:textColor="#1E3A5F"
            android:textSize="23sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"/>
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ipConfigLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="18dp"
        android:hint="Server IP Address"
        app:endIconMode="clear_text"
        app:boxStrokeColor="#B0BEC5"
        app:boxStrokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@id/titleRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/saveIpButton">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ipConfigInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#1E3A5F"
            android:fontFamily="sans-serif" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/saveIpButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginEnd="24dp"
        android:text="저장"
        android:textColor="#1E3A5F"
        android:textSize="14sp"
        android:fontFamily="sans-serif-medium"
        android:backgroundTint="#FFE8A8"
        android:rippleColor="#DCC869"
        app:cornerRadius="20dp"
        app:layout_constraintTop_toTopOf="@id/ipConfigLayout"
        app:layout_constraintBottom_toBottomOf="@id/ipConfigLayout"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/content_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="24dp"
        app:layout_constraintTop_toBottomOf="@id/ipConfigLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/conversationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="22dp"
                android:background="#FFFFFF"
                android:elevation="3dp"
                android:translationZ="3dp"
                android:text="@string/conversation_hint"
                android:textColor="#1E3A5F"
                android:textSize="18sp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="6dp" />
        </ScrollView>

        <TextView
            android:id="@+id/initializationStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/initializing"
            android:textColor="#7A7A7A"
            android:textSize="14sp"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="6dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/startStopButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start_listening"
            android:textColor="#1E3A5F"
            android:textSize="17sp"
            android:fontFamily="sans-serif-medium"
            android:elevation="2dp"
            android:backgroundTint="#FFE28A"
            android:rippleColor="#DCC869"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="16dp"
            app:cornerRadius="28dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
